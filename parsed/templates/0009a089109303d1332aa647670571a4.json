{"components/category/sort-box":"<fieldset class=\"form-fieldset actionBar-section\">\r\n    <div class=\"form-field\">\r\n        <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\r\n        <select class=\"form-select form-select--small category-sort-select\" name=\"sort\" id=\"sort\" role=\"listbox\">\r\n            <option value=\"featured\" {{#if sort '==' 'featured'}}selected{{/if}}>{{lang 'common.sorter.featured'}}</option>\r\n            <option value=\"newest\" {{#if sort '==' 'newest'}}selected{{/if}}>{{lang 'common.sorter.newest'}}</option>\r\n            <option value=\"bestselling\" {{#if sort '==' 'bestselling'}}selected{{/if}}>{{lang 'common.sorter.top_sellers'}}</option>\r\n            <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\r\n            <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\r\n            <option value=\"avgcustomerreview\" {{#if sort '==' 'avgcustomerreview'}}selected{{/if}}>{{lang 'common.sorter.reviews'}}</option>\r\n            <option value=\"priceasc\" {{#if sort '==' 'priceasc'}}selected{{/if}}>{{lang 'common.sorter.price_asc'}}</option>\r\n            <option value=\"pricedesc\" {{#if sort '==' 'pricedesc'}}selected{{/if}}>{{lang 'common.sorter.price_desc'}}</option>\r\n            {{#if result_count}}\r\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\r\n            {{/if}}\r\n        </select>\r\n    </div>\r\n</fieldset>\r\n","components/dh-custom/category/products-per-page":"<fieldset class=\"form-fieldset actionBar-section actionBar-section--productsPerPage m-r-20\">\r\n    <div class=\"form-field\">\r\n        <label class=\"form-label\" for=\"limit\">Per Page:</label>\r\n        <select class=\"form-select category-sort-select\" name=\"limit\" id=\"limit\" data-width=\"100%\" data-minimum-results-for-search=\"Infinity\">\r\n            <option value=\"20\" {{#if products_per_page '==' 20}}selected{{/if}}>20</option>\r\n            <option value=\"40\" {{#if products_per_page '==' 40}}selected{{/if}}>40</option>\r\n            <option value=\"60\" {{#if products_per_page '==' 60}}selected{{/if}}>60</option>\r\n            <option value=\"80\" {{#if products_per_page '==' 80}}selected{{/if}}>80</option>\r\n            <option value=\"100\" {{#if products_per_page '==' 100}}selected{{/if}}>100</option>\r\n        </select>\r\n    </div>\r\n</fieldset>\r\n","components/products/filter":"\r\n\r\n<div class=\"action-bar-wrap\">\r\n    <div class=\"custom-row d-flex\">\r\n        <div class=\"column products-per-page-block\">\r\n            <form class=\"actionBar\" method=\"get\" data-sort-by>\r\n                {{> components/dh-custom/category/products-per-page products_per_page=products_per_page}}            \r\n            </form> \r\n        </div>\r\n        <div class=\"column\">\r\n            <form class=\"actionBar\" method=\"get\" data-sort-by=\"product\">\r\n                {{> components/category/sort-box sort=sort}}\r\n            </form>           \r\n        </div>\r\n    </div>\r\n</div>\r\n\r\n"}
